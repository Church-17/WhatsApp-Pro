{
  "manifest_version": 3,
  "name": "WhatsApp Pro",
  "description": "Enable on WhatsApp Web some original features",
  "version": "1.13",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": ["*://web.whatsapp.com/"],
  "background": {"service_worker": "bg.js"},
  "action": {"default_popup":"popup/popup.html"},
  "icons": {"489": "icon.png"},
  "content_scripts": [{
    "matches": ["*://web.whatsapp.com/"],
    "js": [
      "modules/lines.js",
      "modules/logo.js",
      "modules/color.js",
      "modules/notify.js"
    ]
  }]
}