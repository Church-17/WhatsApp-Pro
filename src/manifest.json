{
  "manifest_version":2,
  "name":"WhatsApp Pro",
  "description":"Enable on WhatsApp Web some original features",
  "version":"1.9",
  "permissions":[
    "*://web.whatsapp.com/",
    "storage"
  ],
  "background":{
    "scripts":["bg.js"],
    "persistent":false
  },
  "browser_action":{"default_popup":"popup/popup.html"},
  "icons":{"489":"icon.png"},
  "content_scripts":[{
    "matches":["*://web.whatsapp.com/"],
    "js":[
      "features/line.js",
      "features/logo.js",
      "features/color.js",
      "features/notify.js"
    ]
  }]
}